{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    },

    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": false,

    "noImplicitAny": false,
    "noUnusedParameters": false,
    "noUnusedLocals": false,
    "skipLibCheck": true,
    "allowJs": true,
    "strictNullChecks": false,

    "jsx": "react-jsx"
  }
}
